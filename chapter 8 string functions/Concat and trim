- CONCAT: Combine multiple strings into one

-- Full name
SELECT
    CONCAT(TRIM(first_name), ' ', TRIM(last_name)) AS full_name
FROM support_tickets;

-- Ticket label
SELECT    -------------- its always best practice to use trim to remove leading unneccesary spaces in the names and other data 
    CONCAT(
        TRIM(first_name),
        ' ',
        TRIM(last_name),
        ' - ',
        issue_type
    ) AS ticket_label
FROM support_tickets;





-- TRIM: Remove leading and trailing spaces

SELECT
    TRIM(first_name) AS clean_first_name,
    TRIM(last_name) AS clean_last_name
FROM support_tickets;















