-- Practice dataset for string functions

CREATE TABLE support_tickets (
    ticket_id INT,
    first_name VARCHAR(50),
    last_name VARCHAR(50),
    email_address VARCHAR(100),
    issue_type VARCHAR(50),
    city VARCHAR(50)
);

